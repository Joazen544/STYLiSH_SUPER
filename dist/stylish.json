          "category": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          },
          "texture": {
            "type": "string"
          },
          "wash": {
            "type": "string"
          },
          "place": {
            "type": "string"
          },
          "note": {
            "type": "string"
          },
          "story": {
            "type": "string"
          },
          "colors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Color"
            }
          },
          "sizes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "variants": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Variant"
